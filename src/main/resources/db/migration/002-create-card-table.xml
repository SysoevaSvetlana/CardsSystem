<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="2" author="dev">

        <createTable tableName="card">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <!-- Поле encryptedNumber -->
            <column name="encrypted_number" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <!-- Ссылка на владельца -->
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <!-- Срок действия карты -->
            <column name="expiry_date" type="DATE"/>

            <!-- Статус карты (Enum: ACTIVE, BLOCKED, EXPIRED и т.п.) -->
            <column name="status" type="VARCHAR(20)" defaultValue="ACTIVE"/>

            <!-- Баланс карты -->
            <column name="balance" type="DECIMAL(15,2)" defaultValueNumeric="0.00"/>
        </createTable>


        <addForeignKeyConstraint
                baseTableName="card"
                baseColumnNames="user_id"
                referencedTableName="users"
                referencedColumnNames="id"
                constraintName="fk_card_user"/>
        <addUniqueConstraint
                tableName="card"
                columnNames="encrypted_number"
                constraintName="uk_card_encrypted_number"/>


    </changeSet>

</databaseChangeLog>

